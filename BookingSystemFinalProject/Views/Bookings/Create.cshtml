@model BookingSystemFinalProject.Models.Booking

@{
    ViewBag.Title = "Create";
    var Menu = ViewBag.restaurant;
    Layout = "~/Views/Shared/_BookingSystem.cshtml";

    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "1",
        Value = "1"
    });
    listItems.Add(new SelectListItem
    {
        Text = "2",
        Value = "2",
        Selected = true
    });
    listItems.Add(new SelectListItem
    {
        Text = "3",
        Value = "3"
    });
}


<head>
    <link rel="stylesheet" type="text/css" href="../Content/booking-create.css">
</head>


<div>

    @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
    @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })

</div>

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row ">
            <div class="col-xs-2 ">
                 @Html.DropDownListFor(model => model.NumberOfPeople, listItems, "1")

            </div>

            <div class="col-xs-2 ">
                @Html.TextBoxFor(model => model.BookingDate, htmlAttributes: new { id = "datetimepicker1", placeholder = "MM/DD/YYY", type = "text"  })

            </div>
       
            <div class="col-xs-2">
   
                @Html.DropDownListFor(model => model.RestaurantId, (SelectList)ViewBag.DropDownValues1)

            </div>
            <div class="col-xs-2">
                <input type="submit" value="Find a Table" class="btn btn-default" />
            </div>
        </div>
    </div>


}

  
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker({  format: 'DD-MM-YYYY HH:mm:ss' });
            });
        </script>







        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts 
        {
            @Scripts.Render("~/bundles/jqueryval")
        }
